# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8

# 4 space indentation
[*.py]
indent_size = 4

# Tab indentation
[Makefile]
tab_width = 2
indent_style = tab

# 2 space indentation
[*.{js,json,css,yml,yaml}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 4
indent_style = space
